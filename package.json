{
  "name": "check-package-dependencies",
  "version": "8.0.0",
  "description": "Check package dependencies for duplicates, peer dependencies satisfaction and more early",
  "keywords": [
    "package.json"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/check-package-dependencies.git",
  "homepage": "https://github.com/christophehurpeau/check-package-dependencies",
  "type": "module",
  "packageManager": "yarn@4.5.2",
  "engines": {
    "node": ">=22.11.0"
  },
  "sideEffects": false,
  "bin": "./bin/check-package-dependencies.mjs",
  "main": "./dist/index.js",
  "types": "./dist/definitions/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/definitions/index.d.ts",
      "node": {
        "import": "./dist/index.js"
      }
    }
  },
  "files": [
    "src",
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "checks": "node scripts/check-package.js",
    "clean": "yarn clean:build",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstallDev": "pob-root-postinstall",
    "test": "node --disable-warning=ExperimentalWarning --experimental-strip-types --test src/**/*.test.ts",
    "test:coverage": "npx c8 --all --src ./src node --disable-warning=ExperimentalWarning --experimental-strip-types --test src/**/*.test.ts",
    "test:coverage:json": "npx c8 --reporter=json --all --src ./src node --disable-warning=ExperimentalWarning --experimental-strip-types --test src/**/*.test.ts",
    "test:coverage:lcov": "POB_VITEST_COVERAGE=lcovvitest run --coverage",
    "test:watch": "node --disable-warning=ExperimentalWarning --experimental-strip-types --test src/**/*.test.ts",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "pob": {
    "bundler": "tsc",
    "entries": [
      "index"
    ],
    "envs": [
      {
        "target": "node",
        "version": "22",
        "omitVersionInFileName": true
      }
    ],
    "typescript": true
  },
  "prettier": "@pob/root/prettier-config",
  "dependencies": {
    "chalk": "^5.2.0",
    "import-meta-resolve": "^4.1.0",
    "jsonc-parser": "^3.3.1",
    "semver": "^7.5.4",
    "semver-utils": "^1.1.4",
    "tslib": "^2.8.1",
    "type-fest": "^4.0.0"
  },
  "devDependencies": {
    "@pob/commitlint-config": "8.0.1",
    "@pob/eslint-config": "59.0.0",
    "@pob/eslint-config-typescript": "59.1.2",
    "@pob/root": "14.4.0",
    "@types/node": "22.9.3",
    "@types/semver": "7.5.8",
    "@types/semver-utils": "1.1.3",
    "eslint": "9.14.0",
    "semver": "7.5.4",
    "typedoc": "0.27.1",
    "typescript": "5.7.2"
  }
}
