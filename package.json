{
  "name": "check-package-dependencies",
  "version": "1.2.4",
  "description": "Check package dependencies for duplicates, peer dependencies satisfaction and more early",
  "keywords": [
    "package.json"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/check-package-dependencies.git",
  "homepage": "https://github.com/christophehurpeau/check-package-dependencies",
  "engines": {
    "node": ">=12.10.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "development": {
          "import": "./dist/index-node12-dev.mjs",
          "require": "./dist/index-node12-dev.cjs.js"
        },
        "import": "./dist/index-node12.mjs",
        "require": "./dist/index-node12.cjs.js"
      }
    }
  },
  "module:node": "./dist/index-node12.mjs",
  "module:node-dev": "./dist/index-node12-dev.mjs",
  "sideEffects": false,
  "bin": {
    "check-package-dependencies": "./bin/check-package-dependencies.js"
  },
  "scripts": {
    "build": "pob-build && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.build.json",
    "checks": "node scripts/check-package.js",
    "clean": "rm -Rf dist",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll && yarn run generate:test-coverage",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --ext .js,.mjs,.ts --report-unused-disable-directives --quiet *.js src bin scripts",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "test:watch": "jest",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    },
    "automock": false,
    "testEnvironment": "node",
    "setupFiles": [
      "./test-setup.js"
    ]
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "12",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "index"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "glob": "^7.1.6",
    "semver": "^7.3.4",
    "type-fest": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@pob/commitlint-config": "2.1.0",
    "@pob/eslint-config": "43.0.0",
    "@pob/eslint-config-node": "43.1.0",
    "@pob/eslint-config-typescript": "43.0.0",
    "@pob/eslint-config-typescript-node": "43.0.0",
    "@pob/root": "3.2.0",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.23",
    "@types/semver": "7.3.6",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "babel-jest": "26.6.3",
    "babel-preset-latest-node": "5.5.1",
    "eslint": "7.27.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "25.0.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "pob-babel": "26.8.0",
    "pob-lcov-reporter": "4.0.1",
    "prettier": "2.3.0",
    "rollup": "2.50.5",
    "typedoc": "0.20.34",
    "typescript": "4.2.4"
  }
}
