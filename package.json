{
  "name": "check-package-dependencies",
  "version": "2.0.2",
  "description": "Check package dependencies for duplicates, peer dependencies satisfaction and more early",
  "keywords": [
    "package.json"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/check-package-dependencies.git",
  "homepage": "https://github.com/christophehurpeau/check-package-dependencies",
  "type": "commonjs",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "main": "./dist/index-node12.cjs.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "node": {
        "development": "./dist/index-node12-dev.cjs.js",
        "default": "./dist/index-node12.cjs.js"
      }
    }
  },
  "sideEffects": false,
  "bin": "./bin/check-package-dependencies.js",
  "scripts": {
    "build": "pob-build && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.build.json",
    "checks": "node scripts/check-package.mjs",
    "clean": "rm -Rf dist",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll && yarn run generate:test-coverage",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --ext .js,.mjs,.ts --report-unused-disable-directives --quiet *.js src bin scripts",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    },
    "automock": false,
    "testEnvironment": "node",
    "setupFiles": [
      "./test-setup.js"
    ]
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "12",
        "formats": [
          "cjs"
        ]
      }
    ],
    "entries": [
      "index"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "glob": "^7.1.6",
    "semver": "^7.3.4",
    "type-fest": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@pob/commitlint-config": "3.1.1",
    "@pob/eslint-config": "45.0.2",
    "@pob/eslint-config-typescript": "45.0.2",
    "@pob/root": "5.1.1",
    "@types/glob": "7.1.4",
    "@types/jest": "27.0.1",
    "@types/semver": "7.3.8",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "babel-jest": "26.6.3",
    "babel-preset-latest-node": "5.5.1",
    "eslint": "7.32.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "34.0.1",
    "jest": "26.6.3",
    "pob-babel": "28.0.2",
    "pob-lcov-reporter": "5.0.0",
    "prettier": "2.3.2",
    "rollup": "2.56.3",
    "typedoc": "0.21.2",
    "typescript": "4.3.5"
  }
}
