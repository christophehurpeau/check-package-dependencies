{
  "name": "check-package-dependencies",
  "version": "3.0.2",
  "description": "Check package dependencies for duplicates, peer dependencies satisfaction and more early",
  "keywords": [
    "package.json"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/check-package-dependencies.git",
  "homepage": "https://github.com/christophehurpeau/check-package-dependencies",
  "type": "commonjs",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "packageManager": "yarn@3.1.1",
  "main": "./dist/index-node14.cjs.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "node": {
        "default": "./dist/index-node14.cjs.js"
      }
    }
  },
  "sideEffects": false,
  "bin": "./bin/check-package-dependencies.js",
  "scripts": {
    "build": "pob-build && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.build.json",
    "checks": "node scripts/check-package.mjs",
    "clean": "rm -Rf dist",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet *.{js,cjs,mjs} src bin scripts",
    "lint:prettier": "prettier --check .",
    "postinstallDev": "pob-root-postinstall",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "automock": false,
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/src/test-setup.ts"
    ]
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "14",
        "formats": [
          "cjs"
        ]
      }
    ],
    "entries": [
      "index"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "glob": "^7.1.6",
    "semver": "^7.3.4",
    "type-fest": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.10",
    "@pob/commitlint-config": "4.1.0",
    "@pob/eslint-config": "48.0.5",
    "@pob/eslint-config-typescript": "48.0.6",
    "@pob/root": "6.4.0",
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.0",
    "@types/semver": "7.3.9",
    "eslint": "8.7.0",
    "jest": "27.4.7",
    "pob-babel": "29.7.0",
    "prettier": "2.5.1",
    "typedoc": "0.22.11",
    "typescript": "4.5.4"
  }
}
